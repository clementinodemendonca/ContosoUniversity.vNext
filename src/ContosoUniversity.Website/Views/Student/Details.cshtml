@model ContosoUniversity.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt><label asp-for="LastName"></label></dt>
        <dd>@Model.LastName</dd>

        <dt><label asp-for="FirstMidName"></label></dt>
        <dd>@Model.FirstMidName</dd>

        <dt><label asp-for="EnrollmentDate"></label></dt>
        <dd>@Model.EnrollmentDate</dd>

        <dt>
            <label asp-for="Enrollments"></label>
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>

                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>@item.Course.Title</td>
                        <td>@item.Grade</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    <a asp-controller="Student" asp-action="Edit" asp-route-id=@Model.ID>Edit</a> |
    <a asp-controller="Student" asp-action="Index">Back to List</a>
</p>
