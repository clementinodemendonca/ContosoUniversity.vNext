@model ContosoUniversity.Models.Instructor

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form asp-controller="Instructor" asp-action="Create" method="post" class="form-horizontal" role="form">

    <div class="form-horizontal">
        <h4>Instructor</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FirstMidName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="HireDate" class="control-label col-md-2"></label>
            <div class="col-md-3">
                <div class="input-group input-append date picker" data-date-format="yyyy-mm-dd">
                    <input asp-for="HireDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                    <span class="input-group-btn">
                        <span class="btn btn-default"><i class="glyphicon glyphicon-calendar"></i></span>
                    </span>
                </div>
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OfficeAssignment.Location" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="OfficeAssignment.Location" class="form-control" />
                <span asp-validation-for="OfficeAssignment.Location" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table>
                    @{
                        List<ContosoUniversity.ViewModels.AssignedCourseData> courses = ViewBag.Courses;
                        foreach (var course in courses)
                        {
                            <tr>
                                <td>
                                    <div class="checkbox-inline">
                                        <label>
                                            <input type="checkbox" name="selectedCourses" value="@course.CourseID" checked="@course.Assigned">
                                            @course.ToString()
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Instructor" asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>

    <script>
        $('.picker').datepicker(
            {
                autoclose: true,
                format: 'yyyy-mm-dd',
                todayBtn: true
            });
    </script>
}
