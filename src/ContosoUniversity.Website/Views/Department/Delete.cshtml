@model ContosoUniversity.Models.Department

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<p class="error">@ViewBag.ConcurrencyErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt><label asp-for="Administrator.FullName"></label></dt>
        <dd>@(Model.Administrator?.FullName)</dd>

        <dt><label asp-for="Name"></label></dt>
        <dd>@Model.Name</dd>

        <dt><label asp-for="Budget"></label></dt>
        <dd>@Model.Budget</dd>

        <dt><label asp-for="StartDate"></label></dt>
        <dd><display asp-for="StartDate" /></dd>
    </dl>

    <form asp-controller="Department" asp-action="Delete" method="post" role="form">
        <input asp-for="DepartmentID" type="hidden" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Department" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
