@model ContosoUniversity.Models.Department

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form asp-controller="Department" asp-action="Create" method="post" class="form-horizontal" role="form">

    <h4>Department</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Budget" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Budget" class="form-control" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label col-md-2"></label>
        <div class="col-md-3">
            <div class="input-group input-append date picker" data-date-format="yyyy-mm-dd">
                <input asp-for="StartDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span class="input-group-btn">
                    <span class="btn btn-default"><i class="glyphicon glyphicon-calendar"></i></span>
                </span>
            </div>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="InstructorID" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="InstructorID" asp-items="ViewBag.InstructorID" class="form-control"></select>
            <span asp-validation-for="InstructorID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Department" asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>

    <script>
        $('.picker').datepicker(
            {
                autoclose: true,
                format: 'yyyy-mm-dd',
                todayBtn: true
            });
    </script>
}
